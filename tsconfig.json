{
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"verbatimModuleSyntax": true,
		"paths": {
			"@/*": ["./hub/*"]
		}
	},
	"include": [
		"hub/**/*.ts",
		"hub/**/*.vue",
		"hub/.vitepress/**/*",
		"hub/**/*.md",
		"scripts/**/*.ts"
	],
	 "vueCompilerOptions": {
		"vitePressExtensions": [".md"],
	},
}